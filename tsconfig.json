{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "jsx": "react",
        "paths": {
            "~/*": ["./src/*"],
            "#/*": ["./demo/*"]
        },
        "outDir": "./dist",
        "newLine": "lf",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src", "demo", "custom.d.ts"],
    "exclude": ["node_modules"]
}
